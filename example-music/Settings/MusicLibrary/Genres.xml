                </ConfigurableElement>
                <ConfigurableElement Path="/MusicLibrary/my_library/artists/BlackSabbath">
                    <StringParameter Name="BlackSabbath">Included</StringParameter>
                </ConfigurableElement>
                <ConfigurableElement Path="/MusicLibrary/my_library/artists/Beethoven">
